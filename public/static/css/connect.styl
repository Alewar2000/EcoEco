body
	background-color #f6f5f3
	margin 0px
	font-size 14px
	
.mtop16
	margin-top 16px	

.box
	background-color #fff
	border-radius 8px
	border 1px solid #d6d6d6
	position absolute
	
	width 500px
	.btn-success
		width 100%
		border 0px
	.inside
		padding 16px

	.header
		a
			img
				padding 16px
				display block
				margin 0px auto
				width 50%
	.footer			
		text-align center
		a
			display inline-block
			font-size 1em
			&:last-child
				margin-left 24px
				
			
.box_image
	width 100%
	height 100vh
	img
		width 100%
		height 100%



.box_login
	left calc(75% - 250px)
	top calc(50% - 217px)
	
.box_register
	left calc(75% - 250px)
	top calc(50% - 330px)