body
	background-color #f5f6fa
	font-size 14px;
	font-family: 'Roboto', sans-serif;

h2,h3,h4,h5,ul,body,html
	padding 0px
	margin 0px
	
.wrapper
	min-height 100vh
	overflow hidden
	.col1
		float left
		position relative
		z-index 999
		width 17%
		img
			width 85%
			height 85%
	.col2
		float left
		width 83%
		

.sidebar
	background-color #fff
	min-height 100vh
	.section-top
		background-color #abffc1
		box-shadow 0 0.5rem 2rem rgba(0,0,0,0.15)
	.logo
		display block
		margin 0px auto
		padding-top 20px
		width 80%
	.user
		color #000000 !important
		padding 20px
		a
			color #002fb0
			font-size 1.2em
	.main
		display block
		margin-top 4px
		ul
			li
				margin-bottom 4px
				a
					color #8998AC
					display block
					font-size 1.4em
					padding 12px 16px
					text-decoration none
					i
						margin-right 16px
					&:hover
						background-color #ddebde
						box-shadow 0 0.7rem 2rem rgba(0,0,0,0.15)
						color #000000 !important
						
.navbar
	background-color #ddebde
	box-shadow 0 0.7rem 2rem rgba(0,0,0,0.15)
	a
		color #000000 !important

.page 
	padding-top 16px
	padding-bottom 16px
	.breadcrumb
		background-color #fff
		box-shadow 0 0.6rem 2rem rgba(0,0,0,0.10)
	
	.panel
		background-color #fff
		box-shadow 0 0.5rem 2rem rgba(0,0,0,0.15)
		border-radius 8px
		border-bottom 2px solid
		width 100%
		.header
			border-bottom 1px solid #000000
			h2.title
				display inline-block
				color #19213d
				font-size 1.1em
				padding 12px 16px
		.inside
			padding 16px		
				
				